# Claude Code Web - Host Mode Configuration
# Copy this to .env and customize as needed

# Server Configuration
PORT=3000
HOST=0.0.0.0

# Session secret for signing cookies (generate with: openssl rand -hex 32)
SESSION_SECRET=your_random_secret_here

# User Authentication
# Format: username:passwordhash,username2:passwordhash2
# Generate password hash: echo -n "yourpassword" | sha256sum | cut -d' ' -f1
# Example:
# USERS=admin:5e884898da28047151d0e56f8dc6292773603d0d6aabbdd62a11ef721d1542d8,user:6b86b273ff34fce19d6b804eff5a3f5747ada4eaa22f1d49c01e52ddb7875b4b

# Leave empty for no authentication (development only)
USERS=

# Claude API Configuration (optional, for Claude features)
# ANTHROPIC_API_KEY=your_api_key_here

# Session Configuration
MAX_SESSIONS=5
SESSION_TIMEOUT=3600000

# Data Directory
DATA_DIR=./data

# Environment Directory for user workspaces
ENVIRONMENT_DIR=./data/environments
